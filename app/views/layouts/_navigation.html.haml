%nav#mainNav.navbar.navbar-default.navbar-fixed-top
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{:type => "button", :aria => {:expanded => "false"}, :data => {:toggle => "collapse", :target => "#bs-example-navbar-collapse-1"}}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "/"} PlayBall
    .collapse.navbar-collapse#bs-example-navbar-collapse-1
      %ul.nav.navbar-nav.navbar-right 
        %li
          %a{:href => "/courts"} Courts          
        -if logged_in?
          %li
            %a{:href => "/users"} Users
          %li.dropdown
            %a.dropdown-toggle{:href => "#", :data => {:toggle => "dropdown"}, 
                               :role => "button"}
              = "Signed in as " + current_user.username
              = "(Admin)" if current_user.admin?
              %span.caret
            %ul.dropdown-menu
              %li
                = link_to edit_user_path(current_user) do
                  %i.fa.fa-pencil-square-o 
                  Settings
              %li
                = link_to user_path(current_user) do
                  %i.fa.fa-binoculars
                  Profile
              %li.divider{:role => "separator"}  
              %li
                = link_to logout_path, method: :delete do
                  %i.fa.fa-sign-out
                  Logout
        -else
          %li
            %a#loginButton{:data => {:toggle => "modal", :which => "login", :target=> "#loginModal"}}
              %i.fa.fa-user
              Log in
          %li
            %a#signupButton{:data => {:toggle => "modal", :which => "signup", :target=> "#signupModal"}}
              %i.fa.fa-user-plus 
              Sign up
= render "/layouts/signupModal" 
= render "/layouts/loginModal"