.jumbotron
  .container
    %h1= @court.name
    .row
      .col-sm-8.col-sm-offset-2 
        %img{:src => "#{@court.picture.url}", :onerror =>"this.src='/assets/ball.jpg'", :height => "300px"}
        .caption
          %br       
          %p.courtParagraph= @court.description
          %small= "Created by: " + User.find(@court.user_id).username + ", " + time_ago_in_words(@court.created_at) + " ago "
        %br
        = link_to "Back", :back, class: "btn btn-primary"
        - if logged_in? && (current_user.id == @court.user_id || current_user.admin?)
          =link_to "Edit", edit_court_path(@court), class: "btn btn-warning"
          =link_to "Delete", @court, class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure?" }
        - if logged_in?
          =link_to "Add Comment", "", class: "btn btn-info", id: "addCommentButton"
        %br
        %br
        .addComment.well
          %a.close &times;
          %h3 Add New Comment
          =form_for @comment, :html => {:class => "form-horizontal"} do |f|
            -if @comment.errors.any?
              #error_explanation.alert.alert-danger
                %h2= pluralize(@comment.errors.count, "error") + " prohibited this court from being saved:"
                %ul
                - @comment.errors.full_messages.each do |message|
                  %li= message
            .form-group
              .col-xs-8.col-xs-offset-2.col-md-6.col-md-offset-3= f.text_area :content, class: "form-control", autofocus: "true"
            = f.submit "Submit", class: "btn btn-success"
        - @court.comments.each do |comment|
          -if !comment.user_id.blank?
            .well
              %p.comment= comment.content
              %small.commentDate= "Added by: " + User.find(comment.user_id).username + ", " + time_ago_in_words(comment.created_at) + " ago "
              %br
              - if current_user == comment.user_id || current_user.admin?
                = link_to "Delete", comment_path(comment), class: "commentActions btn btn-danger btn-xs", method: :delete, data: { confirm: "Are you sure?" }
                = link_to "Edit", "#", class: "commentActions btn btn-warning btn-xs"
