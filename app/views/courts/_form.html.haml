=form_for court, :html => { :id => "submitForm" } do |f|
  .row.no-center
    .col-md-6.col-md-offset-3      
      -if court.errors.any?
        #error_explanation.alert.alert-danger
          / %h3= "Your form has " + pluralize(user.errors.count, "error") + ":"
          %ul
            - court.errors.full_messages.each do |message|
              %li= message
      .form-group
        = f.label :name, class: "control-label"
        .val-col= f.text_field :name, class: "form-control", autofocus: "true"
      .form-group
        = f.label :description, class: "control-label"
        .val-col= f.text_area :description, class: "form-control"
      .form-group
        = f.hidden_field :latitude, :value => 10
        = f.hidden_field :longitude, :value => 20
        = f.label "location", class: "control-label"
        .val-col
          %input.form-control{:name => "court[location]", :id => "court_location", :type => "text", :placeholder => " "}
      .form-group
        = f.label :picture, class: "control-label"
        .val-col= f.file_field :picture, accept: "image/jpeg, image/jpg, image/gif, image/png", class: "form-control"
      = f.submit "Submit", class: "btn btn-success btn-wide", id: "submitFormButton"
