=form_for user, :html => { :id => "userForm" } do |f|
  .row.no-center
    .col-md-6.col-md-offset-3
      = render "shared/errors", :obj => user
      - if type == 'edit'
        .form-group
          = f.label :picture, "Upload your avatar", class: "control-label"
          = link_to 'or change your gravatar', 'https://en.gravatar.com/connect/', target: '_blank'
          .val-col= f.file_field :picture, class: "form-control"
      .form-group
        = f.label :email, class: "control-label"
        %em="(It will not be published)"
        .val-col= f.email_field :email, class: "form-control", autofocus: "true"
      .form-group
        = f.label :username, "Name", class: "control-label"
        .val-col= f.text_field :username, class: "form-control"
      .form-group
        = f.label :password, class: "control-label"
        .val-col= f.password_field :password, class: "form-control", autocomplete: "false"
      .form-group
        = f.label :password_confirmation, "Password Confirmation", class: "control-label"
        .val-col= f.password_field :password_confirmation, class: "form-control", autocomplete: "false"
      = f.submit "Submit", class: "btn btn-success btn-wide"

