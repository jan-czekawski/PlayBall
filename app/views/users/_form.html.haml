=form_for user do |f|
  .row.no-center
    .col-md-6.col-md-offset-3
      -if user.errors.any?
        #error_explanation.alert.alert-danger
          %h2= pluralize(user.errors.count, "error") + " prohibited this user from being saved:"
          %ul
          - user.errors.full_messages.each do |message|
            %li= message
      .form-group
        = f.label :email, class: "control-label"
        = f.email_field :email, class: "form-control", autofocus: "true"
      .form-group
        = f.label :username, "Name", class: "control-label"
        = f.text_field :username, class: "form-control"
      .form-group
        = f.label :password, class: "control-label"
        = f.password_field :password, class: "form-control", autocomplete: "false"
      .form-group
        = f.label :password_confirmation, "Password confirmation", class: "control-label"
        = f.password_field :password_confirmation, class: "form-control", autocomplete: "false"
      = f.submit "Submit", class: "btn btn-success btn-wide"

