.jumbotron.showJumbo
  .container
    - if @user.picture.blank?
      = gravatar(@user, size: 200)
    - else
      =image_tag(@user.picture, height: 200)
    - if !@courts.blank?
      %h2= "Courts added by " + @user.username + ":"
      = will_paginate @courts, class: "showUserPgn pagination"
      .row
        - @courts.each do |court|
          .col-md-4.col-sm-6
            %a{:href => "/courts/#{court.id}"}
              .thumbnail.hvr-grow
                %img{:src => "#{court.picture.url}", :onerror =>"this.src=errorPage", :height => "100px"}
                .caption
                  %h3= court.name
                  %p= truncate(court.description, length: 60)
                  %small Created at:
                  %small= court.created_at
                  %small= "Created by:"
                  %small= court.user_id
      = will_paginate @courts
    - else
      %h2= @user.username + " hasn't added any courts yet"