.jumbotron.showJumbo
  .container
    %h1.showHead Create new password
    .row.no-center
      .col-md-6.col-md-offset-3
        =form_for(@user) do |f|
          .form-group
            =f.label :password
            =f.email_field :password, class: "form-control"
          .form-group
            =f.label :password_confirmation
            =f.email_field :password_confirmation, class: "form-control"
          .form-group
            =f.submit "Submit", class: "btn btn-success btn-wide"