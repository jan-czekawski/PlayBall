.jumbotron
  .container
    %h1 Login
    .row.no-center
      .col-md-6.col-md-offset-3
        =form_for(:session, :url => login_path) do |f|
          .form-group
            = f.label :email
            #loginEmail= f.email_field :email, class: "form-control", autofocus: true, required: true
          .form-group
            = f.label :password
            = f.password_field :password, class: "form-control", autocomplete: "off", required: true, pattern: ".{6,}", title: "Minimum six characters"
          .form-group
            = f.submit "Log in", class: "btn btn-success btn-wide"
        First time on the page?
        = link_to "Sign Up", signup_path